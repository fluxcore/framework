{
	"name": "fluxcore/framework",
	"description": "The framework for FluxCore.",
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/fluxcore/components"
		}
	],
	"require": {
		"fluxcore/components": "dev-master",
		"illuminate/filesystem": "dev-master",
		"illuminate/events": "dev-master",
		"illuminate/exception": "dev-master",
		"illuminate/view": "dev-master",
		"illuminate/database": "dev-master",
		"symfony/http-foundation": "2.2.*",
		"symfony/http-kernel": "2.2.*"
	},
	"autoload": {
		"classmap": [
			"app/controller",
			"app/model"
		]
	},
	"minimum-stability": "dev"
}